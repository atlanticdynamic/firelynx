version = "v1"

[[listeners]]
id = "api"
type = "http"
address = "127.0.0.1:{{.Port}}"

[listeners.http]
read_timeout = "30s"
write_timeout = "30s"

[[endpoints]]
id = "api-endpoint"
listener_id = "api"

[[endpoints.routes]]
app_id = "risor-hello"
[endpoints.routes.http]
path_prefix = "/hello"

[[apps]]
id = "risor-hello"
[apps.script]
[apps.script.risor]
code = '''
// Return a simple map (will be JSON-encoded automatically)
{
    "message": "Hello from Risor!",
    "timestamp": time.now().format("2006-01-02T15:04:05Z07:00")
}
'''
timeout = "5s"