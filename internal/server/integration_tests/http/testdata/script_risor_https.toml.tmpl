version = "v1"

[[listeners]]
id = "api"
type = "http"
address = "127.0.0.1:{{.Port}}"


[[endpoints]]
id = "api-endpoint"
listener_id = "api"

[[endpoints.routes]]
app_id = "risor-https-app"
[endpoints.routes.http]
path_prefix = "/execute"

[[apps]]
id = "risor-https-app"
[apps.script]
[apps.script.static_data]
data = { greeting = "from HTTPS" }
[apps.script.risor]
uri = "{{.ScriptURL}}"
timeout = "10s"