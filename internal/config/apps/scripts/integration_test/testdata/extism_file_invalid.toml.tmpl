version = "v1"

[[listeners]]
id = "http"
address = "127.0.0.1:{{.Port}}"
type = "http"

[listeners.http]
read_timeout = "30s"
write_timeout = "30s"

[[endpoints]]
id = "main"
listener_id = "http"

[[endpoints.routes]]
app_id = "extism-file-test"
[endpoints.routes.http]
path_prefix = "/"

[[apps]]
id = "extism-file-test"

[apps.script]

[apps.script.extism]
uri = "file://{{.WASMPath}}"
entrypoint = "greet"
timeout = "1s"