version = "v1"

[[listeners]]
id = "http"
address = "127.0.0.1:{{.Port}}"
type = "http"

[listeners.http]
read_timeout = "30s"
write_timeout = "30s"

[[endpoints]]
id = "main"
listener_id = "http"

[[endpoints.routes]]
app_id = "valid-risor"
[endpoints.routes.http]
path_prefix = "/risor"

[[endpoints.routes]]
app_id = "invalid-starlark"
[endpoints.routes.http]
path_prefix = "/starlark"

# Valid Risor app
[[apps]]
id = "valid-risor"

[apps.script]
[apps.script.risor]
code = """
import "http"
import "json"

func handler(req http.Request) http.Response {
    return http.Response{
        StatusCode: 200,
        Body: json.marshal({"engine": "risor"}),
        Header: {"Content-Type": ["application/json"]},
    }
}
export default: handler
"""
timeout = "1s"

# Invalid Starlark app (syntax error)
[[apps]]
id = "invalid-starlark"

[apps.script]
[apps.script.starlark]
code = """
def broken(req
    return "broken"  # Syntax error: missing closing parenthesis
"""
timeout = "1s"