version = "v1"

[[listeners]]
id = "http"
address = "127.0.0.1:{{.Port}}"
type = "http"

[listeners.http]
read_timeout = "30s"
write_timeout = "30s"

[[endpoints]]
id = "main"
listener_id = "http"

[[endpoints.routes]]
app_id = "risor-test"
[endpoints.routes.http]
path_prefix = "/"

[[apps]]
id = "risor-test"

[apps.script]

[apps.script.risor]
code = """
import "http"

func broken( {  // Syntax error: missing closing parenthesis
    return "broken"
}
"""
timeout = "1s"