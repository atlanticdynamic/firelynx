version = "v1"

[[listeners]]
id = "http"
address = "127.0.0.1:{{.Port}}"
type = "http"

[listeners.http]
read_timeout = "30s"
write_timeout = "30s"

[[endpoints]]
id = "main"
listener_id = "http"

[[endpoints.routes]]
app_id = "starlark-test"
[endpoints.routes.http]
path_prefix = "/"

[[apps]]
id = "starlark-test"

[apps.script]

[apps.script.static_data]
data = { message = "Hello from Starlark integration test" }

[apps.script.starlark]
code = """
def process_data():
    return {
        "message": "Hello from Starlark",
        "status": "success"
    }

result = process_data()
_ = result
"""
timeout = "1s"