version = "v1"

[logging]
level = "debug"
format = "text"

[[listeners]]
id = "http_listener"
address = "{{.HTTPAddr}}"

[listeners.http]
read_timeout = "1s"
write_timeout = "1s"
drain_timeout = "1s"

[[endpoints]]
id = "echo_endpoint"
listener_ids = ["http_listener"]

[[endpoints.routes]]
app_id = "echo_app"
http_path = "/echo"

[[apps]]
id = "echo_app"
[apps.echo]
response = "This is a test echo response"